<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Classes.MainActivity"
    >
<RelativeLayout
    android:id="@+id/mainFrag"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Education Ministry at FCBC"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061" />

    <TextView
        android:id="@+id/bible"
        android:layout_width="350dp"
        android:layout_height="162dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp"
        android:background="@mipmap/bible" />

    <Button
        android:id="@+id/main_quiz"
        android:layout_width="190dp"
        android:layout_height="75dp"
        android:layout_above="@+id/main_verses"
        android:layout_alignParentStart="true"
        android:background="@android:color/white"
        android:text="Quiz"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="369dp" />

    <Button
        android:id="@+id/mediaPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_quiz"
        android:layout_alignParentStart="true"
        android:text="Music Player" />
    <Button
        android:id="@+id/main_journal"
        android:layout_width="190dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/main_quiz"
        android:background="@android:color/white"
        android:text="Journal"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="369dp" />

    <Button
        android:id="@+id/main_verses"
        android:layout_width="190dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/white"
        android:text="Verses"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="444dp" />

    <Button
        android:id="@+id/main_grades"
        android:layout_width="190dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/white"
        android:text="Grades"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="444dp" />


</RelativeLayout>

</LinearLayout>
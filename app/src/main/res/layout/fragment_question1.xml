<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizQuestions.Question1">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/q1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is jesus mama name?"
        android:textColor="@android:color/black"/>

    <RadioGroup
android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="259dp"
        android:layout_below="@+id/q1"
        android:layout_marginTop="25dp">

        <RadioButton
            android:id="@+id/q1_choice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mary" />

        <RadioButton
            android:id="@+id/q1_choice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Martha" />

        <RadioButton
            android:id="@+id/q1_choice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rebecca" />


    </RadioGroup>
    <Button
        android:id="@+id/q1_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="125dp"/>


</FrameLayout>